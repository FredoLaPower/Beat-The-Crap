#------------------------------------------------------------
# DECLARATION
#------------------------------------------------------------

class_name HealthComponent
extends Node


#------------------------------------------------------------
# PROPERTIES
#------------------------------------------------------------

#------------------------------
# EXPORT
#------------------------------

export(int) var MAX_HEALTH


#------------------------------
# PRIVATE
#------------------------------

var _current_health: int = 0


#------------------------------------------------------------
# METHODS
#------------------------------------------------------------

#------------------------------
# VIRTUAL
#------------------------------
func _ready() -> void:
	_current_health = MAX_HEALTH


#------------------------------
# PUBLIC
#------------------------------

func take_damage(damage: int) -> void:
	_current_health -= damage


func get_health() -> int:
		return _current_health
